<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/resources/images/loading.gif"></image>
  </view>
  <block wx:else>
    <image class="title" src="/resources/images/title.png"></image>
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <image class="logo" src="{{userInfo.avatar}}"></image>
        <image class="wave" src="/resources/images/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="/resources/images/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd">
         <image class="smalltitle" src="/resources/images/confirm-word.png"></image>
        <view>
          <view class="confirm-btn" bindtap='goSign' wx:if="{{userInfo.avatar}}">
            <text >立即进入</text>
          </view>
          <button class="confirm-btn"  open-type="getUserInfo" bindgetuserinfo="getUserInfo" wx:else>点击授权</button>
        </view>
        <text class="copyright"></text>
      </view>
    </view>
  </block>
</view>
